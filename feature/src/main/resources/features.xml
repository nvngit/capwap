<features name="odl-capwap-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.0 http://karaf.apache.org/xmlns/features/v1.2.0">

    <repository>mvn:org.opendaylight.controller/features-config/${config.version}/xml/features</repository>
    <repository>mvn:org.opendaylight.controller/features-mdsal/${mdsal.version}/xml/features</repository>
    <repository>mvn:org.opendaylight.yangtools/features-yangtools/${yangtools.version}/xml/features</repository>
    <repository>mvn:org.opendaylight.tcpmd5/features-tcpmd5/${tcpmd5.version}/xml/features</repository>

    <feature name='odl-capwap-all' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-parser</feature>
        <feature version='${project.version}'>odl-capwap-bgp-rib</feature>
        <feature version='${project.version}'>odl-capwap-bgp-rib-impl</feature>
        <feature version='${project.version}'>odl-capwap-bgp-linkstate</feature>
        <feature version='${project.version}'>odl-capwap-bgp-topology</feature>
        <configfile finalname="etc/opendaylight/karaf/31-bgp.xml">mvn:org.opendaylight.capwap/bgp-controller-config/${project.version}/xml/config</configfile>
        <configfile finalname="etc/opendaylight/karaf/41-bgp-example.xml">mvn:org.opendaylight.capwap/bgp-controller-config/${project.version}/xml/config-example</configfile>
    </feature>

    <feature name='odl-capwap-dependencies' version='${project.version}'>
        <!--  concepts -->
        <bundle>mvn:com.google.guava/guava/${guava.version}</bundle>
        <feature version='${yangtools.version}'>odl-yangtools-models</feature>
        <bundle>mvn:org.opendaylight.capwap/concepts/${project.version}</bundle>
        <!-- util -->
        <bundle>mvn:commons-codec/commons-codec/${commons.codec.version}</bundle>
        <bundle>mvn:io.netty/netty-common/${netty.version}</bundle>
        <bundle>mvn:io.netty/netty-buffer/${netty.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/util/${project.version}</bundle>
    </feature>

    <feature name='odl-capwap-data-change-counter' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-dependencies</feature>
        <feature version='${mdsal.version}'>odl-mdsal-broker</feature>
        <feature version='${config.version}'>odl-config-api</feature>
        <configfile finalname="etc/opendaylight/karaf/50-topology-data-change-counter.xml">mvn:org.opendaylight.capwap/data-change-counter-controller-config/${project.version}/xml/config</configfile>
        <bundle>mvn:org.opendaylight.capwap/data-change-counter/${project.version}</bundle>
    </feature>

    <feature name='odl-capwap-bgp-parser' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-dependencies</feature>
        <bundle>mvn:org.opendaylight.capwap/bgp-concepts/${project.version}</bundle>
        <feature version='${config.version}'>odl-config-api</feature>
        <bundle>mvn:org.opendaylight.capwap/bgp-parser-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/bgp-parser-spi/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/bgp-parser-impl/${project.version}</bundle>
    </feature>

    <feature name='odl-capwap-bgp-rib' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-dependencies</feature>
        <bundle>mvn:org.opendaylight.capwap/bgp-parser-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/bgp-concepts/${project.version}</bundle>
        <feature version='${protocol-framework.version}'>odl-protocol-framework</feature>
        <bundle>mvn:org.opendaylight.capwap/bgp-rib-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/bgp-rib-spi/${project.version}</bundle>
    </feature>

    <feature name='odl-capwap-bgp-linkstate' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-bgp-parser</feature>
        <feature version='${project.version}'>odl-capwap-bgp-rib</feature>
        <bundle>mvn:org.opendaylight.capwap/rsvp-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/bgp-linkstate/${project.version}</bundle>
    </feature>

    <feature name='odl-capwap-bgp-rib-impl' version='${project.version}'>
        <feature version='${tcpmd5.version}'>odl-tcpmd5-netty</feature>
        <bundle>mvn:io.netty/netty-codec/${netty.version}</bundle>
        <feature version='${mdsal.version}'>odl-mdsal-broker</feature>
        <feature version='${project.version}'>odl-capwap-bgp-linkstate</feature>
        <feature version='${project.version}'>odl-capwap-bgp-rib</feature>
        <bundle>mvn:org.opendaylight.capwap/bgp-rib-impl/${project.version}</bundle>
    </feature>

    <feature name='odl-capwap-bgp-topology' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-bgp-linkstate</feature>
        <bundle>mvn:org.opendaylight.capwap/topology-api/${project.version}</bundle>
        <feature version='${mdsal.version}'>odl-mdsal-broker</feature>
        <feature version='${protocol-framework.version}'>odl-protocol-framework</feature>
        <bundle>mvn:org.opendaylight.capwap/bgp-topology-provider/${project.version}</bundle>
    </feature>

    <feature name='odl-capwap-programming' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-dependencies</feature>
        <feature version='${config.version}'>odl-config-api</feature>
        <bundle>mvn:org.opendaylight.capwap/topology-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/topology-tunnel-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/programming-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/programming-spi/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/programming-topology-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.capwap/programming-tunnel-api/${project.version}</bundle>
        <configfile finalname="etc/opendaylight/karaf/30-programming.xml">mvn:org.opendaylight.capwap/programming-controller-config/${project.version}/xml/config</configfile>
    </feature>

    <feature name='odl-capwap-programming-impl' version='${project.version}'>
        <feature version='${project.version}'>odl-capwap-programming</feature>
        <feature version='${mdsal.version}'>odl-mdsal-broker</feature>
        <feature version='${tcpmd5.version}'>odl-tcpmd5-netty</feature>
        <bundle>mvn:org.opendaylight.capwap/programming-impl/${project.version}</bundle>
    </feature>

</features>
